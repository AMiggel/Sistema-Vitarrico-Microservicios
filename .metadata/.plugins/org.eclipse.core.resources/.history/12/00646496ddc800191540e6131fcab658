package co.com.vitarrico.app.facturacion.feign;

import org.springframework.cloud.openfeign.FeignClient;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;

import co.com.vitarrico.app.commons.entidad.EntidadProducto;

@FeignClient(name = "servicio-inventario")
public interface ProductoClienteRest {

	@GetMapping(value = "/producto/{id}")
	public EntidadProducto buscarProductoPorId(@PathVariable(value = "id") Long id); 
}
