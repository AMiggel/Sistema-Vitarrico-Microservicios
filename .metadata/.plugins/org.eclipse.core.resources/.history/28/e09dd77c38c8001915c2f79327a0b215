package co.com.vitarrico.app.inventario.dominio.servicio;

import java.util.List;

import co.com.vitarrico.app.commons.entidad.EntidadProducto;

public interface IServicioProducto {

	public List<EntidadProducto> listar();
	
	public EntidadProducto crear (EntidadProducto usuario) throws Exception;
	public EntidadProducto findById (Long id) throws PreconditionException;
	public void borrar (Long id);
	public EntidadProducto modificar(Long id, EntidadProducto usuario) throws PreconditionException;
	public void recargarCivica(Long civicaId, EntidadProducto valorRecarga) throws Exception;
	public void viajar (Long  civicaId, EntidadProducto trayecto)throws Exception;
}
